<section class="section">
  <div class="container has-text-centered">
    <div class="card p-6">
      <header class="card-header">
      <p class="card-header-title is-centered">
        Account Register
      </p>
      </header>
      <div class="card-image mt-6">
        <figure class="is-1by1 mb-6">
          <img src="https://github.com/alienroom/ALIENROOM-Logos-png/blob/main/arReadMe.png?raw=true" alt="Placeholder image">
        </figure>
      </div>
     <div class="columns is-centered">
      <div class="column is-5 is-4-desktop">
        <form action="/users/signin" method="POST">
          <div class="field">
            <div class="control">
              <input class="input" type="text" name="name" placeholder="Name" value="{{name}}" autofocus>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input class="input" type="email" name="email" placeholder="Email" value="{{email}}">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input class="input" type="password" name="password" placeholder="Password" value="{{password}}">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input class="input" type="password" name="confirm_password" placeholder="Confirm Password" value="{{confirm_password}}">
            </div>
          </div>
          <div class="field">
            <button class="button is-primary is-fullwidth">Sign up!</button>
          </div>
          <a href="#">or sign in with Google soon! <i class="fab fa-google"></i></a>
        </form>
      </div>
    </div>
   </div>
  </div>
</section>

